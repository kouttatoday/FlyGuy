-- Square Drawing Script for Roblox

local Drawing = Drawing.new("Square")
Drawing.Size = UDim2.new(0, 100, 0, 100)  -- Size of the square (100x100 pixels)
Drawing.Position = UDim2.new(0.5, -50, 0.5, -50)  -- Center the square on the screen
Drawing.Color = Color3.new(1, 0, 0)  -- Red color
Drawing.Thickness = 2  -- Border thickness
Drawing.Filled = true  -- Fill the square
Drawing.Visible = true  -- Make the square visible

-- Optional: Add a transparency effect
Drawing.Transparency = 1  -- 1 is fully transparent, 0 is fully opaque
Drawing.Transparency = 0.5  -- 50% transparency

-- Optional: Add a drag functionality to move the square
local dragging = false
local dragInput, mousePos, offset = nil, nil, nil

Drawing.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        mousePos = input.Position
        offset = UDim2.new(startingPosition.X.Scale, startingPosition.X.Offset - mousePos.X, startingPosition.Y.Scale, startingPosition.Y.Offset - mousePos.Y)
    end
end)

Drawing.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

game:GetService("RunService").RenderStepped:Connect(function()
    if dragging and dragInput then
        local delta = dragInput.Position - mousePos
        Drawing.Position = UDim2.new(startingPosition.X.Scale, startingPosition.X.Offset + delta.X, startingPosition.Y.Scale, startingPosition.Y.Offset + delta.Y)
    end
end)
